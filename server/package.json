{
  "name": "codenames-server",
  "version": "0.0.1",
  "description": "Codenames game server",
  "author": "koldoon",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:compile": "npx tsc",
    "build:data": "cp -R ../data ../dist/",
    "build:version": "git rev-parse --short HEAD > ../dist/server/version",
    "build:modules": "cp ./package*.json ../dist/server && cd ../dist/server && npm i --only=prod --no-optional --no-fund && rm ./package*.json",
    "build": "npx run-s build:*",
    "start": "env NODE_ENV=production node ../dist/server/main.js",
    "start:dev": "env NODE_ENV=development node ../dist/server/main.js",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "lint": "npx eslint \"{src,appns,libs,test}/**/*.ts\" --fix"
  },
  "jest": {
    "verbose": true
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "helmet": "^3.22.1",
    "http-errors": "^1.7.3",
    "js-yaml": "^3.14.0",
    "mongodb": "^3.5.8",
    "node-fetch": "^2.6.0",
    "on-finished": "^2.3.0",
    "pretty-ms": "^7.0.0",
    "rxjs": "^6.5.5",
    "shuffle-array": "^1.0.1",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/compression": "^1.7.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.6",
    "@types/express-ws": "^3.0.0",
    "@types/helmet": "0.0.47",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.2.3",
    "@types/js-yaml": "^3.12.4",
    "@types/mongodb": "^3.5.20",
    "@types/node": "^12.12.6",
    "@types/node-fetch": "^2.5.7",
    "@types/on-finished": "^2.3.1",
    "@types/shuffle-array": "0.0.28",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "acorn": "^7.3.1",
    "axios": "^0.19.2",
    "rimraf": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.5.4",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5",
    "npm-run-all": "^4.1.5"
  }
}
