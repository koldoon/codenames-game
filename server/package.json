{
  "name": "codenames-server",
  "version": "0.0.1",
  "description": "Codenames game server",
  "author": "koldoon",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:compile": "yarn tsc",
    "build:data": "cp -R ../data ../dist/",
    "build:version": "git rev-parse --short HEAD > ../dist/server/version",
    "build:modules": "cp ./package.json ../dist/server && cd ../dist/server && yarn install --prod",
    "build": "yarn run-s build:*",
    "start": "env NODE_ENV=production node ../dist/server/main.js",
    "start:dev": "env NODE_ENV=development node ../dist/server/main.js",
    "format": "yarn prettier --write \"src/**/*.ts\"",
    "lint": "yarn eslint \"{src,appns,libs,test}/**/*.ts\" --fix"
  },
  "jest": {
    "verbose": true
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "helmet": "^3.23.3",
    "http-errors": "^1.8.0",
    "js-yaml": "^3.14.0",
    "mongodb": "^3.5.9",
    "node-fetch": "^2.6.0",
    "on-finished": "^2.3.0",
    "pretty-ms": "^7.0.0",
    "rxjs": "^6.6.0",
    "shuffle-array": "^1.0.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/compression": "^1.7.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.7",
    "@types/express-ws": "^3.0.0",
    "@types/helmet": "0.0.47",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.4",
    "@types/js-yaml": "^3.12.5",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.23",
    "@types/node-fetch": "^2.5.7",
    "@types/on-finished": "^2.3.1",
    "@types/shuffle-array": "1.0.0",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "acorn": "^7.3.1",
    "axios": "^0.19.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6"
  }
}
